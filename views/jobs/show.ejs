<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= job.title %></title>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body>

  <%- include('../partials/_navbar.ejs') %>

  <div class="job-card">

    <h2 class="job-title"><%= job.title %></h2>
    <div class="job-info-box">

  <p><strong> Work Location:</strong><span><%= job.workLocation %></span></p>

  <p>
    <strong> Work Type:</strong>
    <span>
      <% if (job.workType === 'full-time') { %>
        Full Time
      <% } else if (job.workType === 'part-time') { %>
        Part Time
      <% } else { %>
        Shifts
      <% } %>
    </span>
  </p>

  <p><strong>Employees Needed:</strong> <span><%= job.employeesNeeded %></span></p>
  <p><strong> Applications:</strong> <%= job.candidates.length %> / <%= job.maximumApplicants %></p>
</div>


    <!-- STATUS -->
    <% let myApplication = null; %>
    <% job.candidates.forEach(c => { %>
      <% if (c.user._id.equals(user._id)) { myApplication = c } %>
    <% }) %>

    <% if (myApplication) { %>
      <div class="job-status">
        <span class="status-label">Application Status</span>

        <% if (!myApplication.status || myApplication.status === 'pending') { %>
          <span class="status pending">‚è≥ Pending</span>
        <% } %>

        <% if (myApplication.status === 'selected') { %>
          <span class="status selected">‚úÖ Selected</span>
        <% } %>

        <% if (myApplication.status === 'rejected') { %>
          <span class="status rejected">‚ùå Rejected</span>
        <% } %>
      </div>
    <% } %>

    <!-- DESCRIPTION -->
    <p class="job-description">
      <%= job.description %>
    </p>

    <!-- APPLY -->
    <!-- APPLY -->
<% if (!job.owner._id.equals(user._id)) { %>

  <% const applied = job.candidates.some(c => c.user._id.equals(user._id)) %>
  <% const isFull = job.candidates.length >= job.maximumApplicants %>

  <% if (applied) { %>
    <p class="job-applied">‚úÖ You have already applied for this job</p>

  <% } else if (isFull) { %>
    <p class="job-full">‚ùå This job has reached the maximum number of applicants</p>

  <% } else { %>
    <form action="/jobs/<%= job._id %>/apply" method="POST">
      <button>Apply for this Job</button>
    </form>
  <% } %>

<% } %>

    <!-- OWNER ACTIONS -->
    <% if (job.owner._id.equals(user._id)) { %>
      <div style="margin-top:20px; display:flex; gap:10px; justify-content:center;">
        <form action="/jobs/<%= job._id %>/edit" method="GET">
          <button>Edit Job</button>
        </form>

        <form action="/jobs/<%= job._id %>?_method=DELETE" method="POST">
          <button>Delete Job</button>
        </form>
      </div>
    <% } %>

  </div>

  <!-- OWNER VIEW: CANDIDATES -->
  <% if (job.owner._id.equals(user._id)) { %>
    <div class="profile-container" style="margin-top:40px;">
      <h2>Candidates</h2>

      <% job.candidates.forEach(c => { %>
        <p>
          üêß
          <a href="/profiles/user/<%= c.user._id %>">
            <%= c.user.username %>
          </a>

          <strong>
            <%= !c.status ? 'Pending' : c.status %>
          </strong>
        </p>

        <form action="/jobs/<%= job._id %>/select/<%= c.user._id %>?_method=PUT" method="POST">
          <button>Select</button>
        </form>

        <form action="/jobs/<%= job._id %>/reject/<%= c.user._id %>?_method=PUT" method="POST">
          <button>Reject</button>
        </form>

        <hr />
      <% }) %>
    </div>
  <% } %>

</body>
</html>
